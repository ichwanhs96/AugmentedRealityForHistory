<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">

    <fragment
        android:id="@+id/poiMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".activities.PoiMapActivity" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Set Position"
        android:id="@+id/buttonPoiMapSetPosition"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Set Radius"
        android:id="@+id/buttonPoiMapSetRadius"
        android:layout_above="@+id/buttonPoiMapSetPosition"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"/>

</RelativeLayout>
