<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/overlayView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.OverlayActivity">

    <informatika.com.augmentedrealityforhistory.views.CameraSurfaceView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/overlayViewInsideRelativeLayout">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="93dp"
            android:id="@+id/navArrow"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="altitude"
            android:id="@+id/altitudeTextView"
            android:rotation="90"
            android:textColor="#009900"
            android:layout_alignBottom="@+id/navArrow"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="target"
            android:id="@+id/targetTextView"
            android:rotation="90"
            android:textColor="#009900"
            android:layout_alignBottom="@+id/altitudeTextView"
            android:layout_toStartOf="@+id/altitudeTextView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="distance"
            android:id="@+id/distanceTextView"
            android:rotation="90"
            android:textColor="#009900"
            android:layout_alignBottom="@+id/navArrow"
            android:layout_toStartOf="@+id/navArrow" />

    </RelativeLayout>

</RelativeLayout>