<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/overlayView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.OverlayActivity">

    <informatika.com.augmentedrealityforhistory.views.CameraSurfaceView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/overlayViewInsideRelativeLayout">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="93dp"
            android:id="@+id/navArrow"
            android:src="@drawable/arrow"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="altitude"
            android:id="@+id/altitudeTextView"
            android:textColor="#009900"
            android:layout_below="@+id/navArrow"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="target"
            android:id="@+id/targetTextView"
            android:textColor="#009900"
            android:layout_below="@+id/altitudeTextView"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="distance"
            android:id="@+id/distanceTextView"
            android:textColor="#009900"
            android:layout_below="@+id/targetTextView"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="angle"
            android:id="@+id/angleTextView"
            android:textColor="#009900"
            android:layout_below="@+id/distanceTextView"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Content"
            android:id="@+id/nextContentButton"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="device location"
            android:id="@+id/deviceLocationTextView"
            android:textColor="#009900"
            android:layout_below="@+id/angleTextView"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="target location"
            android:id="@+id/targetLocationTextView"
            android:textColor="#009900"
            android:layout_below="@+id/deviceLocationTextView"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="target location"
            android:id="@+id/azimuthDevice"
            android:textColor="#009900"
            android:layout_below="@+id/targetLocationTextView"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="target location"
            android:id="@+id/pitchDevice"
            android:textColor="#009900"
            android:layout_below="@+id/azimuthDevice"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="target location"
            android:id="@+id/rollDevice"
            android:textColor="#009900"
            android:layout_below="@+id/pitchDevice"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

</RelativeLayout>