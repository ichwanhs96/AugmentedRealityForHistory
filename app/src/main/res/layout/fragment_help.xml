<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="32dp"
        android:text="Bantuan"
        android:id="@+id/textViewJudulBantuan"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Daftar Sejarah"
        android:id="@+id/textView"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Menu Daftar Sejarah digunakan untuk memilih sejarah yang akan ditampilkan dalam tampilan augmented"
        android:id="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Daftar POI"
        android:id="@+id/textView3"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Menu Daftar POI digunakan untuk menampilkan seluruh point of interest yang sudah dibuat dan tersedia pada prototipe dalam tampilan peta"
        android:id="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tambah Sejarah"
        android:id="@+id/textView5"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Menu Tambah Sejarah digunakan untuk menambahkan sejarah baru. Untuk menambahkan sejarah baru pengguna diwajibkan untuk membuat konten sejarah terlebih dahulu. Selanjutnya pada menu tambah sejarah ini pengguna dapat mengatur alur konten untuk sebuah sejarah, dari konten A terlebih dahulu yang ditampilkan lalu menampilkan konten B atau sebaliknya "
        android:id="@+id/textView6" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tambah Konten"
        android:id="@+id/textView7"
        android:layout_marginTop="16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Menu Tambah Konten digunakan untuk menambahkan konten baru. Ketika ingin membuat konten baru, pengguna diwajibkan memiliki point of interest terlebih dahulu, karena konten hanya akan dapat dibaca ketika berada disuatu lokasi point of interest yang sudah dibuat"
        android:id="@+id/textView8" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tambah Point of Interest"
        android:id="@+id/textView9"
        android:layout_marginTop="16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Menu Tambah Point of Interest digunakan untuk menambahkan lokasi point of interest baru. Lokasi point of interest adalah lokasi dimana suatu konten berada"
        android:id="@+id/textView10" />

</LinearLayout>
</ScrollView>